{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist/server",
    "baseUrl": "./src-server",
    "types": ["jest", "node"]
  },
  "include": ["src-server/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
